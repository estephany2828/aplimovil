<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Animales">

    <ImageView android:id="@+id/imageFrutaOne"
               android:layout_width="119dp"
               android:layout_height="120dp"
               android:src="@drawable/fresas"

               app:srcCompat="@drawable/pera"
               tools:srcCompat="@drawable/pera"
               android:layout_marginStart="64dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="64dp"
               android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
               android:layout_marginBottom="300dp"
               app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/textNombreFrutas2" app:layout_constraintVertical_bias="0.259"/>
    <TextView android:id="@+id/textNombreFrutas2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Frutas"
              android:textSize="30dp"
              android:orientation="vertical"

              tools:layout_editor_absoluteX="0dp"
              tools:ignore="MissingConstraints" app:fontFamily="@font/alfa_slab_one" android:gravity="center"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="PERA"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/ImageFrutaOne"
            app:layout_constraintBottom_toTopOf="@+id/ImageFrutaOne"
            app:layout_constraintTop_toBottomOf="@+id/ImageFrutaOne" android:textStyle="bold"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.518" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="@dimen/dimImag"
            android:layout_height="@dimen/dimImag" app:srcCompat="@drawable/bananas"
            android:id="@+id/imageView4"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"/>
    <TextView
            android:text="BANANA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.417" app:layout_constraintStart_toStartOf="@+id/textView"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="124dp"
            android:layout_height="@dimen/dimImag" app:srcCompat="@drawable/manzana"
            android:id="@+id/imageView5"
            tools:layout_editor_absoluteY="208dp" app:layout_constraintStart_toStartOf="@+id/imageFrutaOne"
    />
    <TextView
            android:text="NARANJA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.517"/>
</android.support.constraint.ConstraintLayout>