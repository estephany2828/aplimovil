<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Inicio">




    <TextView android:id="@+id/titInicio"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/tituloInicio"
              android:textSize="40sp"
              android:textColor="@color/colorAccent"
              android:gravity="center"

    />


    <ImageView android:id="@+id/ImgExtrella"
               android:layout_width="197dp"
               android:layout_height="218dp"
               android:src="@drawable/estrella_amarilla"
               android:layout_gravity="center"
    />
    <EditText android:id="@+id/inputNombre"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="text"
              android:hint="Escribe Tu Nombre"
              android:ems="20"
              android:layout_marginTop="60dp"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:textSize="20sp"
    />
    <EditText android:id="@+id/inputEdad"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="number"
                 android:hint="Escribe Tu Edad"
                 android:ems="20"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:textSize="20sp"

/>

    <Button android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/btnEntrar"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"

    />

</LinearLayout>