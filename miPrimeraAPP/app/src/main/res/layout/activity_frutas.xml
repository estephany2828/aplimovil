<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Frutas" tools:layout_editor_absoluteY="81dp">

    <TextView android:id="@+id/textNombreFrutas"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Frutas"
              android:textSize="30dp"
              android:orientation="vertical"

              tools:layout_editor_absoluteX="0dp"
              tools:ignore="MissingConstraints" app:fontFamily="@font/alfa_slab_one" android:gravity="center"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:id="@+id/ImageFrutaOne"
               android:layout_width="119dp"
               android:layout_height="@dimen/dimImag"
               android:src="@drawable/fresas"

               app:srcCompat="@drawable/pera"
               tools:srcCompat="@drawable/pera"
               android:layout_marginStart="56dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="56dp"
               android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textNombreFrutas"
    />
    <ImageView
            android:layout_height="0dp" app:srcCompat="@drawable/bananas" tools:layout_editor_absoluteY="252dp"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/imageView"/>
    <ImageView
            android:layout_width="@dimen/dimImag"
            android:layout_height="@dimen/dimImag" app:srcCompat="@drawable/bananas"
            android:id="@+id/imageView2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/ImageFrutaOne"
            app:layout_constraintStart_toStartOf="@+id/ImageFrutaOne"
    />
    <ImageView
            android:layout_width="@dimen/dimImag"
            android:layout_height="@dimen/dimImag" app:srcCompat="@drawable/manzana"
            android:id="@+id/imageView3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/imageView2"
    />
    <TextView
            android:text="PERA"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/ImageFrutaOne"
            app:layout_constraintBottom_toTopOf="@+id/ImageFrutaOne"
            app:layout_constraintTop_toBottomOf="@+id/ImageFrutaOne" android:textStyle="bold"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.518" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="BANANO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.417" app:layout_constraintStart_toStartOf="@+id/textView"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="NARANJA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.517"/>

</android.support.constraint.ConstraintLayout>


